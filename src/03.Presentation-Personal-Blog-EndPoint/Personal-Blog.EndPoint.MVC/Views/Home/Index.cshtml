@model List<PostListItemViewModel>
@{
    ViewData["Title"] = "خانه";
}
<h2 class="mb-4">پست‌ها</h2>
<div class="row">
    @foreach (var p in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                @if (!string.IsNullOrEmpty(p.ImageUrl))
                {
                    <img src="@p.ImageUrl" class="card-img-top" alt="تصویر شاخص">
                }
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@p.Title</h5>
                    <p class="card-text">@p.Summary</p>
                    <a class="btn btn-primary mt-auto" asp-controller="Home" asp-action="Details" asp-route-id="@p.Id">ادامه مطلب</a>
                </div>
            </div>
        </div>
    }
</div>